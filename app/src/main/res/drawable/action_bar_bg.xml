        android:angle="360"
        android:centerColor="#4b3cc1"
        android:endColor="#137df7"
        android:startColor="#4a217c"
        android:gradientRadius="360"
        android:type="sweep" />

    <stroke
        android:width="2dp"
        android:color="#4a217c" />
</shape>
</item>
<item
android:bottom="7dp"
android:left="0dp"
android:right="0dp"
android:top="0dp">
<shape android:shape="rectangle" >
    <solid android:color="#fff" />
</shape>
</item>

